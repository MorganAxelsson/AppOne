<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPOne.Game" Title="Quiz">
  <ContentPage.Content Margin="5,35,5,5">
    <StackLayout>      
      <Label x:Name="lblScore"></Label>     
      <Label x:Name="lblQuestion" FontSize="14"></Label>
      <Button x:Name="btnAnswer1" Text="answer1" Clicked="answer4_handled"></Button>
      <Button x:Name="btnAnswer2" Text="answer2" Clicked="answer4_handled"></Button>
      <Button x:Name="btnAnswer3" Text="answer3" Clicked="answer4_handled"></Button>
      <Button x:Name="btnAnswer4" Text="answer4" Clicked="answer4_handled"></Button>
      
      <Button x:Name="btnNextQuestion" Text ="Next question >" BackgroundColor="Blue" Clicked="nextQuestion_handled" IsVisible="False"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>